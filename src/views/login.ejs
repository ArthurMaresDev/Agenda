<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <h2 class="text-center mb-4">Criar conta ou Entrar</h2>
      <p class="text-center text-muted mb-5">Faça login ou crie sua conta abaixo</p>

      <div class="row g-4">
        <!-- Cadastro -->
        <div class="col-lg-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title">Cadastre-se</h5>
              <p class="small text-muted">Ainda não tem conta? Preencha o formulário abaixo:</p>

              <form class="form-cadastro" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="mb-3">
                  <label class="form-label">Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>

                <div class="mb-3">
                  <label class="form-label">Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-primary w-100">Criar conta</button>
              </form>
            </div>
          </div>
        </div>

        <!-- Login -->
        <div class="col-lg-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title">Login</h5>
              <p class="small text-muted">Já tem conta? Entre com seus dados:</p>

              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="mb-3">
                  <label class="form-label">Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>

                <div class="mb-3">
                  <label class="form-label">Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-primary w-100">Entrar</button>
              </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include('includes/footer') %>
